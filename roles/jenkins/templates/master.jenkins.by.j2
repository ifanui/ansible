{% if virual_hosts is defined %}
{% for var in virual_hosts %}
server {
        server_name {{ var.name }};
        location / {
            proxy_pass http://{{ hostvars[host].ansible_default_ipv4.address }}:8080/;
            proxy_redirect     off;
            proxy_set_header   Host             $host;
            proxy_set_header   X-Real-IP        $remote_addr;
            proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
        }
}